{
    "name": "adnan/wp-hook-auditor",
    "description": "Detect orphaned and unheard WordPress hooks via static analysis. No WordPress installation required.",
    "type": "library",
    "keywords": ["wordpress", "hooks", "static-analysis", "wp", "developer-tools", "cli", "audit"],
    "homepage": "https://github.com/malikad778/wp-hook-auditor",
    "license": "MIT",
    "authors": [
        {
            "name": "Adnan Malik",
            "email": "contact@adnanmalik.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "nikic/php-parser": "^5.0",
        "symfony/console": "^6.0|^7.0",
        "symfony/finder": "^6.0|^7.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.0|^3.0"
    },
    "autoload": {
        "psr-4": {
            "Adnan\\WpHookAuditor\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Adnan\\WpHookAuditor\\Tests\\": "tests/"
        }
    },
    "bin": ["bin/wp-hook-audit"],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        },
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
